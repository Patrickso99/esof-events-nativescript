<Page
    class="info"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar backgroundColor="#ffce00">
        <Label text="Information"/>
    </ActionBar>

    <StackLayout orientation="vertical">
        <Image
            height="135"
            src="https://www.units.it/sites/default/files/styles/slideshow_1170x425/public/media/immagini/notizie/trieste10.jpg" alt="panorama trieste"
            stretch="aspectFill" />
        <Label
            text="ESOF 2020"
            padding="20 0 20 20"
            fontSize="20"
            fontWeight="bold"/>
        <StackLayout orientation="vertical">
            <StackLayout orientation="horizontal" paddingBottom="15">
                <Label
                    class="fas fa-map-marker-alt"
                    padding="0 15 0 20"
                    text="&#xf05a;"
                    fontSize="20" />
                <Label
                    text="Date: 11 06, 2020"
                    fontSize="15" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Label
                    class="far fa-calendar"
                    padding="0 19 0 22"
                    text="&#xf3c5;"
                    fontSize="20" />
                <Label
                    text="Location: Trieste, Italy"
                    fontSize="15" />
            </StackLayout>
            <StackLayout orientation="vertical">
                <Label
                    textWrap="true"
                    text="ESOF2020 Trieste will take place from 5 to 9 July 2020 and in the two weeks preceding and following the main event. The activities include meetings, conferences, seminars and public events such as shows and exhibitions. Over 4000 researchers, educators, business actors, policy makers and journalists from all over the world are expected in Trieste to discuss breakthroughs in science."
                    textAlign="left"
                    padding="20" />
            </StackLayout>
        </StackLayout>

        <Button class="-outline -rounded-sm" text="Credits" tap="onTap" />

    </StackLayout>
</Page>
